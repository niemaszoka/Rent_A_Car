{% extends 'base.html.twig' %}

{% block body %}
	{{ parent() }}

<div class="list-wrapper">
	<div class="list-title-bar">	
		<div class="list-title-first">BRAND</div>
		<div class="list-title">SEGMENT</div>
		<div class="list-title-last">PRICE PER DAY</div>
	</div>
	<div class="list">
		<form class="list-form">
		    {% for key, car in cars %}
		    <input class="list-item-checkbox" type="radio" name="car" value="{{key}}" id="{{key}}"/>		    	
		    <label class="list-item" for="{{key}}">
	    		<div class="list-item-name">{{car['name']}}</div>
	    		<div class="list-item-segment">{{car['segment']}}</div>
				<div class="list-item-price">{{car['PLNperDay']}} PLN</div>
	    		<button class="list-item-button"><span>RENT</span></button>
		    </label>
			{% endfor %}
		</form>
		</div>
	</div>
</div>
{% endblock %}

